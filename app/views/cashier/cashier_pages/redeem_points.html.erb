<style>
    main {
    display: flex;
    flex-wrap: nowrap;
    height: 100vh;
    height: -webkit-fill-available;
    overflow-x: auto;
    overflow-y: hidden;
}

main>* {
    flex-shrink: 0;
    min-height: -webkit-fill-available;
}

* {
    font-family: poppins;
    box-sizing: border-box;
}

/* side navigation */

.side-nav-col {
    padding-right: 2px;
}

.user-link a:hover,
.user-link a:focus,
.user-link:hover {
    background-color: none !important;
}

.link-dark {
    color: #2b2b2b;
    font-weight: 400;
    font-size: 18px;
    padding-left: 50px;
}

.d-flex {
    padding-left: 0;
}

.nav-pills .nav-link.active,
.nav-pills .show>.nav-link {
    background-color: #1ab359;
    color: #fff;
    width: 125px;
    margin: 0 10px;
    height: 40px;
}
.nav-pills .nav-link {
    color: #2b2b2b;
}

.link-dark {
    color: #2b2b2b;
    font-weight: 400;
    font-size: 18px;
    padding-left: 50px;
}

.nav-flush .nav-link {
    border-radius: 0;
}

.nav-pills .nav-link.ac {
    background-color: #00AB47;
    color: #ffffff;
}

/* end of side nav */

.nav-link.ac .fas {
    color: #ffffff;

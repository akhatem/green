<div class="row">
    <div class="col-md-6">
        <h2 class="details-tab">Edit Brand</h2>
    </div>
</div>
    
<%= form_with(model: @brand, url: system_brand_path) do |f| %>

    <div class="form-group row">
        <%= f.label :name, class: "col-md-3 col-form-label" %>
        <%= f.text_field :name, class: "form-control"  %>
    </div>

    <div class="form-group row">
        <%= f.label :image, class: "col-md-3 col-form-label" %>
        <%= f.file_field :image, class: "form-control file-field" %>
        <%= f.hidden_field :image, value: f.object.image_was %>
    </div>
    
    <div class="form-group row">
        <%= image_tag @brand.image.url, class: "form-control image-tag col-lg-2" if @brand.image.url %>
    </div>
    
    <div class="row mt-5 actions">
        <!--btns-->
        <div class="btn col-lg-6">
            <%= link_to 'Cancel', system_brands_path, class: "btn btn-outline-success ", style: "padding-top: 7px;" %>
        </div>

        <div class="btn col-lg-6">
            <%= f.submit "Save", class: "btn btn-outline-success ", style: "padding-top: 7px;" %>
        </div>
    </div>
<% end %>
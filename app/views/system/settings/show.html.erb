<div class="show-card">
    <div class="row">
        <div class="col-md-5">
            <h2 class="details-tab card-title">Basic Info</h2>
        </div>
    <div class="col-md-4">
        <%= link_to "Edit", edit_system_setting_path(@setting), class: "btn btn-primary edit-btn" %>
    </div>

    <form>
        <div class="form-group row" style="text-align:center;">
            <label for="customersId" class="col-md-2 col-form-label ">ID</label>
            <input type="number" class="form-control" id="customer_id" placeholder="<%= @setting.id %>" disabled>
        </div>

        <div class="form-group row">
            <label for="formGroupExampleInput2" class="col-md-2 col-form-label">Name</label>
            <input class="form-control" id="form-label" type="text" placeholder="<%= @setting.name %>" disabled>
        </div>

        <div class="form-group row">
            <label for="formGroupExampleInput2" class="col-md-2 col-form-label">Description</label>
            <textarea class= "form-control" id= "form-label" type= "text" disabled>
                <%= @setting.description.gsub('<p>', '').gsub('</p>', '').html_safe %>
            </textarea>
        </div>

        <div class="form-group row">
            <label class="col-md-2 col-form-label">Created at</label>
            <input class="form-control" type="text" placeholder="<%= @setting.created_at.strftime("%I:%M %p %a, %d %b %Y") %>" disabled>
        </div>

        <div class="form-group row">
            <label class="col-md-2 col-form-label">Updated at</label>
            <input class="form-control" type="text" placeholder="<%= @setting.updated_at.strftime("%I:%M %p %a, %d %b %Y") %>" disabled>
        </div>

        <div class="form-group row mb-5 pb-5">
            <div class="col-lg-12">
                <%= link_to "Back", system_settings_path, class: "btn btn-outline-success back-btn" %>
            </div>
        </div>
    </form>
</div>
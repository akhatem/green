<table class="table mt-2">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Created At</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @settings.each do |setting| %>
            <tr>
                <th scope="row">
                    <%= link_to setting.id, system_setting_path(setting), style: "color: green" %>
                </th>
                <td><%= link_to setting.name, system_setting_path(setting), style: "color: green" %></td>
                <td><%= setting.created_at.strftime("%I:%M %p %a, %d %b %Y") %></td>
                <td class="table-action">
                    <%= link_to '', system_setting_path(setting), class: "fa fa-eye", style: "color: green" %>
                    <%= link_to '', edit_system_setting_path(setting), class: "fa fa-edit" %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>

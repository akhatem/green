<div class="col-lg-7">
    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <button class="btn btn-outline-secondary dropdown-toggle" id="dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Filter</button>
            <div class="dropdown-menu">
                <a class="dropdown-item" href="#">Name</a>
                <a class="dropdown-item" href="#">Email</a>
                <a class="dropdown-item" href="#">Role</a>
                <a class="dropdown-item" href="#">Branch</a>
                <div role="separator" class="dropdown-divider"></div>
                <a class="dropdown-item" href="#">Created at</a>
                <a class="dropdown-item" href="#">Updated at</a>
            </div>
        </div>
        <span class="input-group-text input-search" id="addon-wrapping"><i class="fa fa-search"></i> </span>
        <input type="text" class="form-control" aria-label="Text input with dropdown button">
    </div>
</div>
<div class="col-lg-5 main-btns">
        <button class="btn btn-outline-success btn-sm" type="button">Export as PDF</button>
        <button class="btn btn-outline-success btn-sm" type="button">Export as Excel</button>
</div>    


<table class="table mt-2">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Role</th>
            <th scope="col">Branch</th>
            <th scope="col">Actions</th>

        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
        <tr>
            <th scope="row">
                <%= link_to user.id, system_path(user), style: "color: green" %>
            </th>
            <td><%= link_to user.name, system_path(user), style: "color: green" %></td>
            <td><%= user.email %></td>
            <td><%= user.role.name %></td>
            <td><%= user.branchName if user.branch_id %></td>
            <td class="table-action">
                <%= link_to '', system_user_registration_path(user), method: :delete, data: {confirm: "Are you sure?"}, class: "fa fa-trash" %>
            </td>
        </tr>
    <% end %>
    </tbody>
</table>
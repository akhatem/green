<div class="col-lg-7">
    <div class="row">
        <div class="col-md-3 main-btns">
            <%= link_to "Clear Search", system_users_index_path, class: "btn btn-outline-success btn-sm", type: "button" %>
        </div>
        <div class="col-md-4">
            <%= form_for "", url: system_users_index_path, role: "search", method: :get do %>
                <%= text_field_tag :search, @search_term, placeholder: "Search by id or name or mobile or email or branch", 
                    style: "text-align: center;" %>
            <% end %>
        </div>
    </div>
</div>
<div class="col-lg-5 main-btns">
    <%= link_to "Add new User", system_users_new_path, class: "btn btn-outline-success btn-sm", style: "padding-top: 7px;", type: "button" %>
    <%= link_to "Export as PDF", system_users_index_path(format: :pdf), class: "btn btn-outline-success btn-sm", type: "button"  %>
</div>    


<table class="table mt-2">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Role</th>
            <th scope="col">Branch</th>
            <th scope="col">Actions</th>

        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
        <tr>
            <th scope="row">
                <%= user.id %>
            </th>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.role.name %></td>
            <td><%= user.branchName if user.branch_id %></td>
                <td class="table-action">
            <% unless user.role.name.eql?("Super") %>
                    <%= link_to '', system_user_registration_path(user), method: :delete, data: {confirm: "Are you sure?"}, 
                        class: "fa fa-trash" %>
            <% end %>
                </td>
        </tr>
    <% end %>
    </tbody>
</table>
<div class="col-lg-9">
    <%= link_to "Send new SMS", new_system_sms_message_path, class: "btn btn-outline-success btn-sm", style: "padding-top: 7px;" %>
</div>

<table class="table mt-2">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">SMS</th>
            <th scope="col">Mobiles</th>
            <th scope="col">Created At</th>
        </tr>
    </thead>
    <tbody>
        <% @sms_messages.each do |sms_message| %>
        <tr>
            <th scope="row">
                <%= sms_message.id %>
            </th>
            <td><%= sms_message.message %></td>
            <%# sms_message.mobile.each do |mobile| %>
                <td><%#= mobile %></td>
            <%# end %>
            <td><%= sms_message.created_at.strftime("%A, %d %b %Y @ %H:%M:%S") %></td>
        </tr>
    <% end %>
    </tbody>
</table>

<style>

/* tabs */

.nav-pills .nav-link.active,
.nav-pills .show>.nav-link {
    background-color: #1ab359;
    color: #fff;
    width: 125px;
    margin: 0 10px;
    height: 40px;
}

.nav-pills .nav-link {
    color: #2b2b2b;
}

h2 {
    font-size: 18px;
    padding: 10px 0;
    color: #006B2D;
}


/* input feilds */

.form-select {
    width: 50%
}

.form-control {
    width: 50%;
}


/* end of input feilds */

div.form-group.row {
    text-align: center;
    margin-left: 150px;
    margin-top: 15px;
}

.btn-outline-success {
    padding-top: 1px;
    text-align: center;
    float: right;
    white-space: normal;
    border-color: #00AB47;
    width: 50%;
    height: 36px;
    font-size: 12px;
}

.details-tab{
    margin-left: 150px;
    text-align: center;
    border: 1px solid #ced4da;
    border-radius: 7px;
}

.sms-form{
    margin-top: 50px;
}

</style>


<% if @sms_message.errors.any? %>
    <div id="error_explanation">
        <h2 style= "color:red;"><%= pluralize(@sms_message.errors.count, "error") %> found:</h2>
        <ul>
            <% @sms_message.errors.each do |error| %>
            <li style= "color:red;"><%= error.full_message %></li>
            <% end %>
        </ul>
    </div>
<% end %>

<div class="row">
    <div class="col-md-9">
        <h2 class="details-tab">Send new SMS</h2>
    </div>
</div>
<div class="row sms-form">
    <div class="col-md-9">
        <%= form_with(model: @sms_message, url: system_sms_messages_path) do |f| %>
            <div class="form-group row">
                <%= f.label :message, class: "col-md-3 col-form-label" %>
                <%= f.text_area :message, class: "form-control", style: "min-width: 100%"  %>
            </div>
            
            <div class="row mt-5 actions">
                <!--btns-->
                <div class="btn col-lg-6">
                    <%= link_to 'Cancel', system_sms_messages_path, class: "btn btn-outline-success btn-sm", style: "padding-top: 7px; font-size: 18px;" %>
                </div>

                <div class="btn col-lg-6">
                    <%= f.submit "Send", class: "btn btn-outline-success btn-sm", style: "padding-top: 7px;font-size: 18px;" %>
                </div>
            </div>
        <% end %>
    </div>
</div>

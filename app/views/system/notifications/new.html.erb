
            <div class="row">
                <div class="col-md-3">
                    <h2 style="text-align: center;">Add new Notification</h2>
                </div>

            </div>                
            <%= form_with(model: @notification, url: system_notifications_path) do |f| %>
                
                <div class="form-group row">
                    <%= f.label :title, class: "col-md-3 col-form-label required" %>
                    <%= f.text_field :title, class: "form-control" %>
                </div>

                <div class="form-group row">
                    <%= f.label :create_date, class: "col-md-3 col-form-label required" %>
                    <%= f.date_field :create_date, as: :date, class: "form-control" %>
                </div>

                <div class="form-group row">
                    <%= f.label :description, class: "col-md-3 col-form-label required" %>
                    <%= f.text_area :description, class: "form-control"  %>
                </div>
                
                <div class="row mt-5 actions">
                    <!--btns-->
                    <div class="btn col-lg-6">
                        <%= link_to 'Cancel', system_notifications_path, class: "btn btn-outline-success ", style: "padding-top: 7px; font-size: 18px;" %>
                    </div>

                    <div class="btn col-lg-6">
                        <%= f.submit "Save", class: "btn btn-outline-success ", style: "padding-top: 7px;font-size: 18px;" %>
                    </div>
                </div>
            <% end %>
 
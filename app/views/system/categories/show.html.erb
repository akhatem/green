<div class="show-card">
    <div class="row">
        <div class="col-md-5">
            <h2 class="details-tab card-title"><%= @category.name %> Details</h2>
        </div>
        <div class="col-md-4">
            <%= link_to "Edit", edit_system_category_path(@category), class: "btn btn-primary edit-btn" %>
        </div>
    </div>

    <form>
        <div class="form-group row">
            <label class="col-md-2 col-form-label">Id</label>
            <input class="form-control" type="text" value="<%= @category.id %>" disabled>
        </div>

        <div class="form-group row">
            <label class="col-md-2 col-form-label">Name</label>
            <input class="form-control" type="text" value="<%= @category.name %>" disabled>
        </div>

        <div class="form-group row">
            <label class="col-md-2 col-form-label">Brand</label>
            <input class="form-control" type="text" value="<%= @category.brandName %>" disabled>
        </div>

        <div class="form-group row">
            <label class="col-md-2 col-form-label">Created at</label>
            <input class="form-control" type="text" value="<%= @category.created_at.strftime("%I:%M %p %a, %d %b %Y") %>" disabled>
        </div>

        <div class="form-group row">
            <label class="col-md-2 col-form-label">Updated at</label>
            <input class="form-control" type="text" value="<%= @category.updated_at.strftime("%I:%M %p %a, %d %b %Y") %>" disabled>
        </div>
    </form>

    <div class="form-group row mb-5">
        <div class="col-9">
            <%= link_to "Back", system_categories_path, class: "btn btn-outline-success back-btn" %>
        </div>
    </div>
</div>
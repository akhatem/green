<div class="col-lg-5 main-btns">
    <%= link_to "Add new Offer Carosel Image", new_system_offer_carosel_image_path, class: "btn btn-outline-success btn-sm", style: "padding-top: 7px;" %>
</div>

<table class="table mt-2">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">File Name</th>
            <th scope="col">Created At</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @offer_carosel_images.each do |offer_carosel_image| %>
        <tr>
            <th scope="row">
                <%= offer_carosel_image.id %>
            </th>
            <td><%= offer_carosel_image.image.identifier %></td>
            <td><%= offer_carosel_image.created_at.strftime("%A, %d %b %Y @ %H:%M:%S") %></td>
            
            <td class="table-action">
                <%= link_to '', edit_system_offer_carosel_image_path(offer_carosel_image.id), class: "fa fa-edit" %>
                <%= link_to '', system_offer_carosel_image_path(offer_carosel_image.id), method: :delete, data: {confirm: "Are you sure?"}, class: "fa fa-trash" %>
            </td>
        </tr>
    <% end %>
    </tbody>
</table>

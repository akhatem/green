<style>

/* tabs */

.nav-pills .nav-link.active,
.nav-pills .show>.nav-link {
    background-color: #1ab359;
    color: #fff;
    width: 125px;
    margin: 0 10px;
    height: 40px;
}

.nav-pills .nav-link {
    color: #2b2b2b;
}

h2 {
    font-size: 18px;
    padding: 10px 0;
    color: #006B2D;
}


/* input feilds */

.form-select {
    width: 50%
}

.form-control {
    text-align:center;
    width: 42%;
    margin-right: 55px;
    margin-left: 70px;
}

.image-tag{
    margin-top: 16px;
    margin-left: 340px;
    margin-right: 160px;
    float: left;
    max-width: 280px;
    max-height: 257px;
}

.file-field {
    text-align: center;
    width: 36%;
    margin-left: 92px;
    margin-right: 95px;
}


/* end of input feilds */

div.form-group.row {
    text-align: center;
    margin-left: 5px;
    margin-top: 16px;
}

.btn-outline-success {
    padding-top: 1px;
    text-align: center;
    white-space: normal;
    border-color: #00AB47;
    width: 50%;
    height: 36px;
    font-size: 16px;
}

.btn-outline-secondary {
    padding-top: 1px;
    text-align: center;
    white-space: normal;
    border: 1px solid #ced4da;
    width: 50%;
    height: 36px;
    font-size: 16px;
}

.details-tab{
    margin-left: 150px;
    text-align: center;
    border: 1px solid #ced4da;
    border-radius: 7px;
}

</style>

<div>
    <div class="tab-content" id="pills-tabContent">
        <div class="tab-pane fade show active" id="pills-info" role="tabpanel" aria-labelledby="pills-info-tab">
            <!--form-->
            <div class="row">
                <div class="col-md-6">
                    <h2 class="details-tab">Edit City</h2>
                </div>
            </div>            
                <%= form_with(model: @city, url: system_city_path(@city.id)) do |f| %>
                    <% if @city.errors.any? %>
                        <div id="error_explanation">
                            <h2 syle="color: red!important;"><%= pluralize(@city.errors.count, "error") %> found:</h2>
                            <ul>
                                <% @city.errors.each do |error| %>
                                <li><%= error.full_message %></li>
                                <!-- <% end %> -->
                            </ul>
                        </div>
                    <% end %>

                    <div class="form-group row">
                        <%= f.label :name, class: "col-md-3 col-form-label" %>
                        <%= f.text_field :name, class: "form-control"  %>
                    </div>
                    
                    <div class="row mt-5 actions">
                        <!--btns-->
                        <div class="btn col-lg-6">
                            <%= link_to 'Back', system_cities_path, class: "btn btn-outline-success btn-sm", style: "padding-top: 7px;" %>
                        </div>

                        <div class="btn col-lg-6">
                            <%= f.submit "Save", class: "btn btn-outline-success btn-sm", style: "padding-top: 7px;" %>
                        </div>
                    </div>
                <% end %>
        </div>

    </div>
</div>
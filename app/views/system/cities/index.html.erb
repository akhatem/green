<div class="col-lg-7">
    <div class="row">
        <div class="col-md-3 main-btns">
            <%= link_to "Clear Search", system_cities_path, class: "btn btn-outline-success btn-sm", type: "button" %>
        </div>
        <div class="col-md-4">
            <%= form_for "", url: system_cities_path, role: "search", method: :get do %>
                <%= text_field_tag :search, @search_term, placeholder: "Search by id or name or created at", style: "text-align: center;" %>
            <% end %>
        </div>
    </div>
</div>

<div class="col-lg-5 main-btns">
    <%= link_to "Add new City", new_system_city_path, class: "btn btn-outline-success btn-sm", style: "padding-top: 7px;", type: "button" %>
    <%= link_to "Export as PDF", system_cities_path(format: :pdf), class: "btn btn-outline-success btn-sm", type: "button"  %>
</div>

<table class="table mt-2">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">City</th>
            <th scope="col">Created_at</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @cities.each do |city| %>
        <tr>
            <th scope="row">
                <%= city.id %>
            </th>
            <td><%= city.name %></td>
            <td><%= city.created_at.strftime("%A, %d %b %Y @ %H:%M:%S") %></td>
            <td class="table-action">
                <%= link_to '', edit_system_city_path(city), class: "fa fa-edit" %>
                <%= link_to '', system_city_path(city), class: "fa fa-trash", method: :delete, data: {confirm: "Are you sure?"} %>
            </td>
        </tr>
    <% end %>
    </tbody>
</table>

<div class="row">
    <div class="col-md-3">
        <h2 style="text-align: center;">Add new city</h2>
    </div>
</div>

<div class="col-md-9">
    <%= form_with(model: @city, url: system_cities_path) do |f| %>

        <div class="form-group row">
            <label class="col-md-3 col-form-label required">Name</label>
            <%= f.text_field :name, class: "form-control"  %>
        </div>

        <div class="row mt-5 actions">
            <!--btns-->
            <div class="btn col-lg-6">
                <%= link_to 'Cancel', system_cities_path, class: "btn btn-outline-success ", style: "padding-top: 7px;" %>
            </div>

            <div class="btn col-lg-6">
                <%= f.submit "Save", class: "btn btn-outline-success ", style: "padding-top: 7px;" %>
            </div>
        </div>
    <% end %>
</div>
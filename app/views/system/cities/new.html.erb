<div class="row">
    <div class="col-md-3">
        <h2 style="text-align: center;">Add new city</h2>
    </div>
</div>

<% if @city.errors.any? %>
    <div class="row" id="error_explanation">
        <h2 style= "color:red;"><%= pluralize(@city.errors.count, "error") %> found:</h2>
        <div class="col">
            <ul>
                <% @city.errors.each do |error| %>
                    <li style= "color:red;"><%= error.full_message %></li>
                <% end %>
            </ul>
        </div>
    </div>
<% end %>

<div class="col-md-9">
    <%= form_with(model: @city, url: system_cities_path) do |f| %>

        <div class="form-group row">
            <label class="col-md-3 col-form-label">Name<span style="color: red;">&#42;</span></label>
            <%= f.text_field :name, class: "form-control"  %>
        </div>

        <div class="row mt-5 actions">
            <!--btns-->
            <div class="btn col-lg-6">
                <%= link_to 'Cancel', system_cities_path, class: "btn btn-outline-success btn-sm", style: "padding-top: 7px;" %>
            </div>

            <div class="btn col-lg-6">
                <%= f.submit "Save", class: "btn btn-outline-success btn-sm", style: "padding-top: 7px;" %>
            </div>
        </div>
    <% end %>
</div>
<style>

/*tabs */

.nav-pills .nav-link.active,
.nav-pills .show>.nav-link {
    background-color: #1ab359;
    color: #fff;
    width: 125px;
    margin: 0 10px;
    height: 40px;
}

.nav-pills .nav-link {
    color: #2b2b2b;
}

h2 {
    font-size: 19px;
    padding: 10px 0;
    color: #006B2D;
}


/* input feilds */

.form-select {
    width: 50%
}

.form-control {
    text-align:center;
    width: 42%;
    margin-right: 68px;
    margin-left: 70px;
}

.btn-primary {
    background-color: #00AB47;
    border: none;
    width: 40%;
    height: 36px;
}

.copy-link{
    margin-left: 590px;
    margin-right: 160px;
    float: left;
    max-width: 280px;
    max-height: 257px;
}

.btn-primary:hover {
    background-color: #006B2D;
    color: #fff;
}

div.form-group.row {
    text-align: center;
    margin-left: 1px;
    margin-top: 15px;
    width: 100%;
}

.back-btn{
    float: left;
    margin-top: 100px;
    background-color: #00AB47;
    color: white;
    width: 18%;
    height: 36px;
    border: none;
}

.edit-btn {
    float: right;
    margin-bottom: 30px;
}

.btn-outline-secondary {
    padding-top: 1px;
    text-align: center;
    white-space: normal;
    border: 1px solid #ced4da;
    width: 50%;
    height: 36px;
    font-size: 12px;
}

.details-tab{
    margin-left: 150px;
    text-align: center;
    border: 1px solid #ced4da;
    border-radius: 7px;
}


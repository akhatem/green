    margin-right: 130px;
    margin-left: 32px;

}

.col-input{
    margin-right: 500px;
    /* margin-left: 300px; */
}

</style>

<div class="row">
    <div class="col-md-6">
        <h2 class="details-tab"><%= @branch.name %>'s Details</h2>
    </div>
    <div class="col-md-6">
        <%= link_to "Edit", edit_system_branch_path(@branch), class: "btn btn-primary edit-btn" %>
    </div>
</div>

<form>
    <div class="form-group row">
        <label class="col-md-1 col-form-label">Id</label>
        <input class="form-control" type="text" value="<%= @branch.id %>" disabled>
    </div>

    <div class="form-group row">
        <label class="col-md-1 col-form-label">Name</label>
        <input class="form-control" type="text" value="<%= @branch.name %>" disabled>
    </div>

    <div class="form-group row">
        <label class="col-md-1 col-form-label">Address</label>
        <input class="form-control" type="text" value="<%= @branch.address %>" disabled>
    </div>

        <div class="form-group row">
        <label class="col-md-1 col-form-label">City</label>
        <input class="form-control" type="text" value="<%= @branch.cityName %>" disabled>
    </div>

    <div class="form-group row">
        <label class="col-md-1 col-form-label">Link</label>
        <input class="form-control" id="branch_link_id" type="text" value="<%= @branch.link.gsub("\n", '<br>').html_safe %>" readonly>
    </div>
    
    <div class="form-group row">
        <div class="col-md-6">
            <button onclick="copyLink()" class="btn-primary btn-sm copy-link" style="max-width: 30%!important;" id="copy-button">Copy Link</button>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-md-1 col-form-label">Longitude</label>
        <input class="form-control" type="text" value="<%= @branch.long %>" disabled>
    </div>

    <div class="form-group row">
        <label class="col-md-1 col-form-label">Latitude</label>
        <input class="form-control" type="text" value="<%= @branch.lat%>" disabled>
    </div>

    <div class="form-group row">
        <label class="col-sm-3 col-form-label col-label">Created at</label>
        <input class="col-input form-control" type="text" value="<%= @branch.created_at.strftime("%A, %d %b %Y @ %H:%M:%S") %>" disabled>
    </div>

    <div class="form-group row">
        <label class="col-md-2 col-form-label col-label">Updated at</label>
        <input class="col-input form-control" type="text" value="<%= @branch.updated_at.strftime("%A, %d %b %Y @ %H:%M:%S") %>" disabled>
    </div>

</form>

<div class="row">
    <div class="col-lg-12">
        <%= link_to "Back", system_branches_path, class: "btn btn-outline-success back-btn" %>
    </div>
</div>

<script>
    function copyLink() {
        event.preventDefault();
        var branch_link = document.getElementById("branch_link_id");
        var copy_button = document.getElementById("copy-button");
        branch_link.focus();
        branch_link.select();
        branch_link.setSelectionRange(0, 999999);
        document.execCommand("copy");
        alert("Link copied!");
    }
</script>
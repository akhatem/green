 <div class="col-lg-7">
     <div class="row">
         <div class="col-md-3 main-btns">
             <%= link_to "Clear Search", system_branches_path, class: "btn btn-outline-success btn-sm" %>
         </div>
         <div class="col-md-4">
             <%= form_for "", url: system_branches_path, role: "search", method: :get do %>
        <%= text_field_tag :search, @search_term, placeholder: "Search by... id or name or city", style: "text-align: center;" %>
    <% end %>
         </div>
     </div>
 </div>

<div class="col-lg-5 main-btns">
    <%= link_to "Add new Branch", new_system_branch_path, class: "btn btn-outline-success btn-sm", style: "padding-top: 7px;" %>
    <%= link_to "Export as PDF", system_branches_path(format: :pdf, page: params[:page]), class: "btn btn-outline-success btn-sm", type: "button"  %>
</div>

<table class="table mt-2">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">address</th>
            <th scope="col">City</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @branches.each do |branch| %>
            <tr>
                <th scope="row">
                    <%= link_to branch.id, system_branch_path(branch), style: "color: green" %>
                </th>
                <td><%= link_to branch.name, system_branch_path(branch), style: "color: green" %></td>
                <td><%= branch.address %></td>
                <td><%= branch.cityName %></td>
                <td class="table-action">
                    <%= link_to '', system_branch_path(branch), class: "fa fa-eye" %>
                    <%= link_to '', edit_system_branch_path(branch), class: "fa fa-edit" %>
                    <%= link_to '', system_branch_path(branch), class: "fa fa-trash", method: :delete, data: {confirm: "Are you sure?"} %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>
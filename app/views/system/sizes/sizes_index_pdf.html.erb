<table class="table mt-2">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Created At</th>
        </tr>
    </thead>
    <tbody>
        <% @sizes.each do |size| %>
        <tr>
            <th scope="row">
                <%= size.id %>
            </th>
            <td><%= size.name %></td>
            <td><%= size.created_at.strftime("%I:%M %p %a, %d %b %Y") %></td>
        </tr>
    <% end %>
    </tbody>
</table>

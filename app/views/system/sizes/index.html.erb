<div class="col-lg-7">
    <div class="row">
        <div class="col-md-3 main-btns">
            <%= link_to "Clear Search", system_sizes_path, class: "btn btn-outline-success btn-sm", type: "button" %>
        </div>
        <div class="col-md-4">
            <%= form_for "", url: system_sizes_path, role: "search", method: :get do %>
                <%= text_field_tag :search, @search_term, placeholder: "Search by id or name", style: "text-align: center;" %>
            <% end %>
        </div>
    </div>
</div>
<div class="col-lg-5 main-btns">
    <%= link_to "Add new Size", new_system_size_path, class: "btn btn-outline-success btn-sm", style: "padding-top: 7px;" %>
    <%= link_to "Export as PDF", system_sizes_path(format: :pdf), class: "btn btn-outline-success btn-sm", type: "button"  %>
</div>

<table class="table mt-2">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Created At</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @sizes.each do |size| %>
        <tr>
            <th scope="row">
                <%= size.id %>
            </th>
            <td><%= size.name %></td>
            <td><%= size.created_at.strftime("%A, %d %b %Y @ %H:%M:%S") %></td>
            <td class="table-action">
                <%= link_to '', edit_system_size_path(size), class: "fa fa-edit" %>
                <%= link_to '', system_size_path(size), class: "fa fa-trash", method: :delete, data: {confirm: "Are you sure?"} %>
            </td>
        </tr>
    <% end %>
    </tbody>
</table>

<div class="show-card">
    <div class="row">
        <div class="col-md-5">
            <h2 class="details-tab card-title">Basic Info</h2>
        </div>
        <div class="col-md-4">
            <%= link_to "View PDF", system_points_movement_path(@points_movement, format: :pdf), 
            class: "btn btn-outline-success ", type: "button"  %>
        </div>
    </div>

    <form>
        <div class="form-group row">
            <label for="points_movement_id" class="col col-md-2 col-form-label">Id</label>
            <input type="text" class="form-control" id="points_movement_id" value="<%= @points_movement.id %>" disabled>
        </div>

        <div class="form-group row">
            <label for="formGroupExampleInput2" class="col-md-2 col-form-label">Customer</label>
            <%= link_to @points_movement.customerName, system_customer_path(@points_movement.customer_id), style: "color: green;", 
            class: "form-control link-to" %>
        </div>

        <div class="form-group row">
            <label for="formGroupExampleInput2" class="col-md-2 col-form-label">Branch</label>
            <%= link_to @points_movement.branchName, system_branch_path(@points_movement.branch_id), 
                class: "form-control link-to", id: "form-label", style: "color: green;" %>
        </div>

        <div class="form-group row">
            <label for="formGroupExampleInput2" class="col-md-2 col-form-label">System User</label>
            <%= link_to @points_movement.userName, users_index_path, style: "color: green;", class: "form-control link-to" %>
        </div>

        <div class="form-group row">
            <label for="points_movement_receipt_id" class="col-md-2 col-form-label">Receipt Id</label>
            <% unless @points_movement.receipt_id.nil? %>
                <%= link_to @points_movement.receipt_id, system_receipt_path(@points_movement.receipt_id),
                    style: "color: green;", class: "form-control link-to" %>
            <% else %>
                <input type="text" class="form-control" id="points_movement_receipt_id" value="-" disabled>
            <% end %>
        </div>

        <div class="form-group row">
            <label for="formGroupExampleInput2" class="col-md-2 col-form-label">Earned points</label>
            <input class="form-control" id="form-label" type="text" value="<%= @points_movement.earned %>" disabled>
        </div>

        <div class="form-group row">
            <label for="formGroupExampleInput2" class="col-md-2 col-form-label">Redeemed points</label>
            <% if @points_movement.redeemed == 0 %>
                <input class="form-control" id="form-label" type="text" value="<%= @points_movement.redeemed %>" disabled>
            <% else %>
                <input class="form-control" id="form-label" type="text" value="-<%= @points_movement.redeemed %>" disabled>
            <% end %>
        </div>

        <div class="form-group row">
            <label for="formGroupExampleInput2" class="col-md-2 col-form-label">Total Points</label>
            <input class="form-control" id="form-label" type="text" value="<%= @points_movement.total %>" disabled>
        </div>

        <div class="form-group row">
            <label class="col-md-2 col-form-label">Created at</label>
            <input class="form-control" type="text" value="<%= @points_movement.created_at.strftime("%I:%M %p %a, %d %b %Y") %>" disabled>
        </div>

        <div class="form-group row">
            <label class="col-md-2 col-form-label">Updated at</label>
            <input class="form-control" type="text" value="<%= @points_movement.updated_at.strftime("%I:%M %p %a, %d %b %Y") %>" disabled>
        </div>

        <div class="form-group row mb-5 pb-5">
            <div class="col-lg-12">
                <%= link_to "Back", system_points_movements_path, class: "btn btn-outline-success back-btn" %>
            </div>
        </div>
    </form>
</div>

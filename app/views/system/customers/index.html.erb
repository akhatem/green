<div class="col-lg-7">
    <div class="row">
        <div class="col-md-3 main-btns">
            <%= link_to "Clear Search", system_customers_path, class: "btn btn-outline-success btn-sm", type: "button" %>
        </div>
        <div class="col-md-4">
            <%= form_for "", url: system_customers_path, role: "search", method: :get do %>
                <%= text_field_tag :search, @search_term, placeholder: "Search by id or name or mobile or email", style: "text-align: center;" %>
            <% end %>
        </div>
    </div>
</div>

<div class="col-lg-5 main-btns">
        <%= link_to "Export as PDF", system_customers_path(format: :pdf, page: params[:page]), class: "btn btn-outline-success btn-sm", type: "button"  %>
</div>    


<table class="table mt-2">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Mobile</th>
            <th scope="col">Email</th>
            <th scope="col">Points</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @customers.each do |customer| %>
        <tr>
            <th scope="row">
                <%= link_to customer.id, system_customer_path(customer), style: "color: green" %>
            </th>
            <td><%= link_to customer.name, system_customer_path(customer), style: "color: green" %></td>
            <td><%= customer.mobile %></td>
            <td><%= customer.email %></td>
            <td><%= customer.points %></td>
            <td class="table-action">
                <%= link_to '', system_customer_path(customer), class: "fa fa-eye" %>
            </td>
        </tr>
    <% end %>
    </tbody>
</table>
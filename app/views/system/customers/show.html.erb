<div class="row">
    <div class="col-md-3">
        <h2 style="text-align: center;">Basic Info</h2>
    </div>
</div>
<form>
    <div class="form-group row" style="text-align:center;">
        <label for="customersId" class="col-md-3 col-form-label">Customer's ID</label>
        <!-- <div class="col-md-9"> -->
            <input type="number" class="form-control" id="customer_id" placeholder="<%= @customer.id %>" disabled>
        <!-- </div> -->
    </div>

    <div class="form-group row">
        <label for="formGroupExampleInput2" class="col-md-3 col-form-label">Name</label>
        <input class="form-control" id="form-label" type="text" placeholder="<%= @customer.name %>" disabled>
    </div>

    <div class="form-group row">
        <label for="formGroupExampleInput2" class="col-md-3 col-form-label">Mobile</label>
        <input class="form-control" id="form-label" type="text" placeholder="<%= @customer.mobile %>" disabled>
    </div>

    <div class="form-group row">
        <label for="formGroupExampleInput2" class="col-md-3 col-form-label">Email</label>
        <input class="form-control" id="form-label" type="text" placeholder="<%= @customer.email %>" disabled>

    </div>

    <div class="form-group row">
        <label class="col-md-3 col-form-label">Created at</label>
        <input class="form-control" type="text" placeholder="<%= @customer.created_at %>" disabled>
    </div>

    <div class="form-group row">
        <label class="col-md-3 col-form-label">Updated at</label>
        <input class="form-control" type="text" placeholder="<%= @customer.updated_at %>" disabled>
    </div>

    <div class="row">
    <div class="col-md-3">
            <h2 style="text-align: center;">Points</h2>
        </div>

    </div>

    <div class="form-group row">
        <label class="col-md-3 col-form-label">Points</label>
        <input class="form-control" type="text" placeholder="100 point" disabled>

    </div>
    <div class="row">
        <div class="col-lg-12">
            <%= link_to "Back to customers", system_customers_path, class: "btn btn-outline-success back-btn" %>
        </div>
    </div>
</form>
<style>

/* tabs */

.nav-pills .nav-link.active,
.nav-pills .show>.nav-link {
    background-color: #1ab359;
    color: #fff;
    width: 125px;
    margin: 0 10px;
    height: 40px;
}

.nav-pills .nav-link {
    color: #2b2b2b;
}

h2 {
    font-size: 18px;
    padding: 10px 0;
    color: #006B2D;
}


/* input feilds */

.form-select {
    width: 50%
}

.form-control {
    width: 50%;
}


/* end of input feilds */

div.form-group.row {
    text-align: center;
    margin-left: 150px;
    margin-top: 15px;
}

.btn-outline-success {
    padding-top: 1px;
    text-align: center;
    white-space: normal;
    border-color: #00AB47;
    width: 50%;
    height: 36px;
    font-size: 16px;
}

.btn-outline-secondary {
    padding-top: 1px;
    text-align: center;
    white-space: normal;
    border: 1px solid #ced4da;
    width: 50%;
    height: 36px;
    font-size: 16px;
}


</style>

<% if @user.errors.any? %>
    <div id="error_explanation">
        <h2 style= "color:red;"><%= pluralize(@user.errors.count, "error") %> found:</h2>
        <ul>
            <% @user.errors.each do |error| %>
            <li style= "color:red;"><%= error.full_message %></li>
            <% end %>
        </ul>
    </div>
<% end %>

<div>
  <div class="tab-content" id="pills-tabContent">
    <div class="tab-pane fade show active" id="pills-info" role="tabpanel" aria-labelledby="pills-info-tab">
      <!--form-->
      <div class="row">
          <div class="col-md-3">
              <h2 style="text-align: center;">Add new User</h2>
          </div>

      </div>                
      <%= form_with(model: User.new, url: system_users_create_path) do |f| %>

        <div class="form-group row">
            <%= f.label :name, class: "col-md-3 col-form-label" %>
            <%= f.text_field :name, class: "form-control"  %>
        </div>

        <div class="form-group row">
            <%= f.label :email, class: "col-md-3 col-form-label" %>
            <%= f.email_field :email, class: "form-control"  %>
        </div>

        <div class="form-group row">
            <%= f.label :role, class: "col-md-3 col-form-label" %>
            <%= f.collection_select :role_id, Role.order(:name), :id, :name,{ include_blank: true }, { class: "btn btn-outline-secondary dropdown-toggle", style: "font-size: 18px" } %>
        </div>

        <div class="form-group row">
            <%= f.label :branch, class: "col-md-3 col-form-label" %>
            <%= f.collection_select :branch_id, Branch.order(:name), :id, :name,{ include_blank: true }, { class: "btn btn-outline-secondary dropdown-toggle", style: "font-size: 18px" } %>
        </div>

        <div class="form-group row">
            <%= f.label :password, class: "col-md-3 col-form-label" %>
            <%= f.password_field :password, class: "form-control"  %>
        </div>

        <div class="form-group row">
            <%= f.label :password_confirmation, class: "col-md-3 col-form-label" %>
            <%= f.password_field :password_confirmation, class: "form-control"  %>
        </div>
        
        <div class="row mt-5 actions">
          <!--btns-->
          <div class="btn col-lg-6">
            <%= link_to 'Cancel', users_index_path, class: "btn btn-outline-success btn-sm", style: "padding-top: 7px;" %>
          </div>

          <div class="btn col-lg-6">
            <%= f.submit "Save", class: "btn btn-outline-success btn-sm", style: "padding-top: 7px;" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<!DOCTYPE html>
<html>
  <head>
    <title>Green</title>
    <link rel="browser icon" type="image/x-icon" href="<%='/assets/favicon.ico'%>" />
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="<%= controller_name %> <%= action_name %>">
    <div class="container-fluid">
      <% if !user_signed_in? %>
        <%= yield :login %>
        <%= yield :register %>
      <% end  %>
      <div class="row">
        <% if user_signed_in? %>
            <%= render "system/shared/navbar" %>
        <% end %>
        <div class="col-md-3 side-nav-col">
          <% if user_signed_in? %>
            <% if  !params[:controller].split('/').first.eql?('cashier') and user_signed_in? and !current_user.roleKey.eql?("cashier") %>
              <%= render "system/shared/sidebar" %>
            <% end %>
          <% end %>
        </div>
        <% if params[:controller].split('/').first.eql?('cashier') %>
          <div class="col-md-12">
            <%= yield %>
          </div>
        <% else %>
          <div class="col-md-9">
            <% if !controller_name.eql?("sesssions") and !action_name.eql?('new') %>
              <div class="row">
                <% flash.each do |type, msg| %>
                  <% if type.eql?("notice") %>
                    <p class="notice" style="color:#00AB47;"><%= msg %></p>
                  <% else %>
                    <p class="alert" style="color: red;"><%= msg %></p>
                  <% end %>  
                <% end %>
              </div>
            <% end %>
        
            <% if action_name.eql?('index') %>
              <div class="row">
                <%= yield %>
              </div>
            <% else %>
              <%= yield %>
            <% end %>
          
            <% if !controller_name.eql?('static_pages') and (action_name.eql?('index') or action_name.eql?('daily_points_movements')) %>
              <div class="row">
                <%= render 'system/shared/pagination', locals: {pagy: @pagy} %>
              </div>
            <% end %>
            <%# unless params[:controller].split('/').first.eql?('cashier') %>
            <div class="row">
              <!-- <div class="col-md-9"> -->
                <%= render 'system/shared/footer' %>
              <!-- </div> -->
            </div>
            <%# end %>
          </div>
        <% end %>
      </div>
    </div>
    
    <script>
      // To send token in all requests
      $.ajaxSetup({
        headers: {
          'X-CSRF-Token': $('meta[name="csrf-token"]').attr('content')
        }
      });
    </script>
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
  </body>
</html>
